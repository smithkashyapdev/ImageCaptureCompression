<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="6dp"
        app:cardCornerRadius="10dp"
       app:cardUseCompatPadding="true"
        app:paddingEnd="10dp"
        >

        <RelativeLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/cardAppCompatImageView"
                android:layout_width="@dimen/image_square"
                android:layout_height="@dimen/image_square"
                />

            <development.kashyap.smith.gallarycapturelibrary.CircleCheckBox
                android:id="@+id/cardCircleCheckBox"
                android:layout_width="@dimen/checkBoxSize"
                android:layout_height="@dimen/checkBoxSize"
                android:layout_centerInParent="true"
                app:color_checked="#F55E3D"
                />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>